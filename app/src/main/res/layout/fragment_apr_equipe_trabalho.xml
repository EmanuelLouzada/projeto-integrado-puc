<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_equipe_trabalho"
        android:text="Equipe de trabalho"
        style="@style/form_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_solicitante"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Solicitante"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_solicitante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_equipe_trabalho" />


    <Spinner
        android:id="@+id/spinner_solicitante"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_solicitante"
        app:layout_constraintTop_toBottomOf="@+id/txt_equipe_trabalho" />


    <TextView
        android:id="@+id/txt_responsavel1"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Reponsável1"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_solicitante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_solicitante" />



    <Spinner
        android:id="@+id/spinner_reponsavel1"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_responsavel1"
        app:layout_constraintTop_toBottomOf="@+id/spinner_solicitante" />

    <TextView
        android:id="@+id/txt_responsavel2"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Reponsável2"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_reponsavel2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_responsavel1" />

    <Spinner
        android:id="@+id/spinner_reponsavel2"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_responsavel2"
        app:layout_constraintTop_toBottomOf="@+id/spinner_reponsavel1" />


    <TextView
        android:id="@+id/txt_executante1"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Executante1"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_executante1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_responsavel2" />

    <Spinner
        android:id="@+id/spinner_executante1"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_executante1"
        app:layout_constraintTop_toBottomOf="@+id/spinner_reponsavel2" />


    <TextView
        android:id="@+id/txt_executante2"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Executante2"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_executante2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_executante1" />

    <Spinner
        android:id="@+id/spinner_executante2"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="@dimen/margin_large2"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_executante2"
        app:layout_constraintTop_toBottomOf="@+id/spinner_executante1" />


    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_executante2" />

    <TextView
        android:id="@+id/txt_atividade_a_executar"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="35dp"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Atividade a executar"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_executante2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_executante2" />


    <Spinner
        android:id="@+id/spinner_atividade_a_executar"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_executante2"
        app:layout_constraintTop_toBottomOf="@+id/spinner_executante2" />


    <TextView
        android:id="@+id/txt_data"
        android:layout_width="70dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:text="Data"
        android:paddingLeft="24dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar" />


    <EditText
        android:id="@+id/edt_data"
        android:layout_width="90dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:background="#C5C5C5"
        android:gravity="top"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/txt_data"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar" />

    <TextView
        android:id="@+id/txt_hora_inicio"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:text="Hora início"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar"
        app:layout_constraintStart_toEndOf="@+id/edt_data" />

    <TextView
        android:id="@+id/txt_hora_termino"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Hora término"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/txt_hora_inicio"
        app:layout_constraintStart_toEndOf="@+id/edt_data" />


    <EditText
        android:id="@+id/edt_hora_inicio"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:background="#C5C5C5"
        android:gravity="top"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/txt_hora_termino"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar" />

    <EditText
        android:id="@+id/edt_hora_termino"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:background="#C5C5C5"
        android:gravity="top"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/txt_hora_termino"
        app:layout_constraintTop_toBottomOf="@+id/edt_hora_inicio" />


    <TextView
        android:id="@+id/txt_atividade_a_executar2"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/margin_large2"
        app:layout_goneMarginTop="@dimen/margin_large3"
        android:text="Atividade a executar"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/spinner_executante2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_hora_termino" />

    <Spinner
        android:id="@+id/spinner_atividade_a_executar2"
        android:layout_width="0dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_atividade_a_executar2"
        app:layout_constraintTop_toBottomOf="@+id/txt_hora_termino" />


    <TextView
        android:id="@+id/txt_data2"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:paddingLeft="24dp"
        android:text="Data"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar2"
        app:layout_goneMarginTop="@dimen/margin_large3" />

    <EditText
        android:id="@+id/edt_data2"
        android:layout_width="90dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:background="#C5C5C5"
        android:gravity="top"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/txt_data"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar2" />

    <TextView
        android:id="@+id/txt_hora_inicio2"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Hora início"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar2"
        app:layout_constraintStart_toEndOf="@+id/edt_data" />

    <EditText
        android:id="@+id/edt_hora_inicio2"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:background="#C5C5C5"
        android:gravity="top"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/txt_hora_inicio"
        app:layout_constraintTop_toBottomOf="@+id/spinner_atividade_a_executar2" />

    <TextView
        android:id="@+id/txt_hora_termino_2"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Hora início"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/edt_hora_inicio2"
        app:layout_constraintStart_toEndOf="@+id/edt_data" />

    <EditText
        android:id="@+id/edt_hora_termino_2"
        android:layout_width="100dp"
        android:layout_height="10pt"
        android:layout_marginTop="10dp"
        android:background="#C5C5C5"
        android:gravity="top"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/txt_hora_inicio"
        app:layout_constraintTop_toBottomOf="@+id/edt_hora_inicio2" />



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>