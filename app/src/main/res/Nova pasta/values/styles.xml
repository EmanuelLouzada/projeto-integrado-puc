<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorError">@color/red</item>
    </style>

    <!--    Fonts-->
    <style name="PrimaryText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryText.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PrimaryText.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="PrimaryText.Light">
        <item name="android:textColor">@color/lightPaleGrey</item>
    </style>

    <style name="PrimaryText.Light.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PrimaryText.Light.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="PrimaryText.Alert">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecondaryText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="SecondaryText.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="PrimaryText.SearchBox">
        <item name="android:backgroundTint">@color/lightGrey</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <!--Dialog-->
    <style name="DialogTitle">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/lightPaleGrey</item>
    </style>

    <style name="AppDialogTheme" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/lightPaleGrey</item>
    </style>

    <style name="AppDialogMaterialTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StyledThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">
            @style/BodyMaterialAlertDialog.MaterialComponents.Body.Text
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/TitleMaterialAlertDialog.MaterialComponents.Title.Text
        </item>
        <item name="materialButtonStyle">@style/ButtonMaterialAlertDialog</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TitleMaterialAlertDialog.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ButtonMaterialAlertDialog">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <!--    Buttons-->
    <style name="SuccessButton">
        <item name="android:backgroundTint">@color/irisBlue</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NovaCapturaButton" parent="SuccessButton">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.GoBack">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Icon.Info">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/margin_large1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:checked">true</item>
    </style>

    <!--    Others-->
    <style name="HintText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ConfigurationTextInput">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuFaturamento" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="welcomeText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

</resources>
